# When docked at home with external monitor
profile home {
    output eDP-1 {
        scale 1.3
        position 0,0
    }
    output HDMI-A-1 {
        scale 1
        position 1476,0
    }
}
# When undocked (just laptop)
profile mobile {
    output eDP-1 {
        scale 1.3
        position 0,0
    }
}

